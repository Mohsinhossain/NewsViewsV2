<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mohsinmonad.newsviews">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".common.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_news_new"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_news_new"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".main.PagerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".home.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".about.AboutActivity" />
        <activity
            android:name=".news.NewsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme"></activity>
        <activity android:name=".webviews.WebViewActivity"></activity>

        <provider
            android:name="com.mohsinmonad.newsviews.source.local.NewsProvider"
            android:authorities="${packageName}"
            android:exported="false" />
    </application>

</manifest>